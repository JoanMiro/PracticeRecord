<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticeRecord.Views.PracticeHistoryPage"
             xmlns:vm="clr-namespace:PracticeRecord.ViewModels"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:PracticeHistoryViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" x:Key="ActionButton">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="HorizontalOptions" Value="Start" />
                <Setter Property="VerticalOptions" Value="Start" />
                <Setter Property="HeightRequest" Value="22" />
                <Setter Property="WidthRequest" Value="56" />
                <Setter Property="Padding" Value="0" />
            </Style>
            <Style TargetType="BoxView">
                <Setter Property="HorizontalOptions" Value="StartAndExpand" />
                <Setter Property="VerticalOptions" Value="Start" />
                <Setter Property="HeightRequest" Value="26" />
                <Setter Property="WidthRequest" Value="26" />
                <Setter Property="Margin" Value="0"/>
                <Setter Property="Color" Value="WhiteSmoke" />
            </Style>
            <Style TargetType="Label">
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="StartAndExpand" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Margin="10,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Text="Period:" />
        <Picker x:Name="PeriodPicker" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="5,0,20,0"
                    SelectedIndexChanged="PeriodPicker_OnSelectedIndexChanged"
                    ItemDisplayBinding="{Binding CycleStartDate, StringFormat='{0:dd-MMM-yyyy}'}"
                    ItemsSource="{Binding PracticeDataViewModel.PracticeItems}">
        </Picker>
        <StackLayout Grid.ColumnSpan="3" Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
            <Label Text="Period Record:" HorizontalOptions="Start"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                <Label Text="{Binding PeriodStartDate, StringFormat='{0:dd-MMM-yyyy}'}" />
                <Label Text="to" />
                <Label Text="{Binding PeriodEndDate, StringFormat='{0:dd-MMM-yyyy}'}" />
            </StackLayout>
        </StackLayout>
        <!--</Grid>-->
        <ScrollView Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="2">
